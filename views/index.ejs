<%- include ('partials/header.ejs')%>

<body>
    <%- include ('partials/homenavbar.ejs')%>

    
    <div class="container mt-3" >

        <div class="jumbotron">

            <%if(category.title){%>
                <h1 class="display-4"><%=category.title%></h1>
            <%}else{%>
                <h1 class="display-4">Bom dia!</h1>
            <%}%>
            <p class="lead">Este é um simples blog criado com o intuito de desenvolver e mostrar os conhecimentos por mim adiquirios na parte back-end</p>
            <hr class="my-4">
            <p>Descrição detalhada aqui.</p>
            <p class="lead">
              <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais</a>
            </p>
          </div>
        

        <%articles.forEach((article)=>{%>
            
            <div class="card mt-5">

                <div class="card-header">
                    <h2><%=article.title%></h2>
                </div>
                
                <div class="card-body">
                    <a href="/<%=article.slug%>" class="btn btn-success">Ler na íntegra</a>
                </div>

            </div>

        <%})%>

        
        <div class="row mt-5 mb-5" >
            
            <div class="col col-12">
                <a href="/articles/page/2" style="float:right">Next>>></a>
            </div>

        </div>
    </div>

</body>

<%- include ('partials/footer.ejs')%>